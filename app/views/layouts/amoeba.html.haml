  %head
    / BASICS
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title Amoeba free one page responsive bootstrap site template
    %meta{:content => "", :name => "description"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %section#header.appear
    .navbar.navbar-fixed-top{"data-0" => "line-height:100px; height:100px; background-color:rgba(0,0,0,0.3);", "data-300" => "line-height:60px; height:60px; background-color:rgba(0,0,0,1);", :role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.fa.fa-bars.color-white
          %h1
            %a.navbar-brand{"data-0" => "line-height:90px;", "data-300" => "line-height:50px;", :href => "/"}
              Page Poller
        .navbar-collapse.collapse
          %ul.nav.navbar-nav{"data-0" => "margin-top:20px;", "data-300" => "margin-top:5px;"}
            %li.active
              %a{:href => "/"} Home
            %li
              = link_to "Scrapers", scrapers_path
            %li
              %a{:href => "#section-about"} About
            -if current_user.present?
              %li
                = link_to "Sign out", signout_path 
        / /.navbar-collapse
    -if controller.controller_name == "visitors"
      %section.featured
        .container
          .row.mar-bot40
            = yield
    -else
      / services
      %section#section-services.section.pad-bot30.bg-white
        .container
          .row.mar-bot40
            = yield
  
    %section#section-map.clearfix
      #map
    %section#footer.section.footer
      .container
        .row.animated.opacity.mar-bot20{"data-andown" => "fadeIn", "data-animation" => "animation"}
          .col-sm-12.align-center
            %ul.social-network.social-circle
              %li
                %a.icoRss{:href => "#", :title => "Rss"}
                  %i.fa.fa-rss
              %li
                %a.icoFacebook{:href => "#", :title => "Facebook"}
                  %i.fa.fa-facebook
              %li
                %a.icoTwitter{:href => "#", :title => "Twitter"}
                  %i.fa.fa-twitter
              %li
                %a.icoGoogle{:href => "#", :title => "Google +"}
                  %i.fa.fa-google-plus
              %li
                %a.icoLinkedin{:href => "#", :title => "Linkedin"}
                  %i.fa.fa-linkedin
        .row.align-center.copyright
          .col-sm-12
            %p
              Copyright &copy; 2014 Amoeba - by
              %a{:href => "http://bootstraptaste.com"} Bootstraptaste
    %a.scrollup{:href => "#header"}
      %i.fa.fa-chevron-up
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
