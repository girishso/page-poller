%section
  .container
    .row
      .col-md-6.col-md-offset-3.text-center
        %hgroup
          %h2
            Subscribe for SMS Notification
          %h1.free For Free
        .well
          = simple_form_for(@user) do |f|
            .form-inputs
              = f.input :phone, placeholder: 'Your Mobile No', input_html: {  maxlength: 12 }
              
            .form-actions
              = f.button :submit, "Submit",  input_html: { class: 'form-control' }
              
        %small.promise
          %em We won't send spam.