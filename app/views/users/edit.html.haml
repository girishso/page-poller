%section
  .container
    .row
      .col-md-6.col-md-offset-3.text-center
        %hgroup
          %h2
            Add your Mobile number to get notifications on your mobile 
          %h1.free through SMS 
        .well
          = simple_form_for(@user) do |f|
            .form-inputs
              = f.input :phone, placeholder: 'Your Mobile No with ISD Code', input_html: {  maxlength: 28 }
              
            .form-actions
              = f.button :submit, "Submit",  input_html: { class: 'form-control' }
              =link_to "Skip This", root_url      
        %small.promise
          %em We won't send spam. This is completely optional, You can skip this step

